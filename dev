#!/usr/bin/env bash
set -euo pipefail

usage() {
  cat <<'USAGE'
Usage: ./dev <command> [args...]

Commands:
  lint                    Run ruff check --fix and ruff format
USAGE
}

if [ "$#" -lt 1 ]; then
  usage
  exit 1
fi

cmd="$1"
shift

case "$cmd" in
  lint)
    uv run ruff check --fix .
    uv run ruff format .
    ;;
  *)
    usage
    exit 1
    ;;
esac
